// .nav
.nav__list
	display none
	font-size 0
	@extends .transition
	+rmin($tM)
		display block
.nav__item
	margin-left 2.375rem
	@extends .ib
	color #FFF
	font-family $rM
	font-size 16px
	line-height 1
	// text-transform uppercase
	// text-transform ini
	// letter-spacing tracking(120)
	+r($tL)
		margin-left 20px
		font-size 13px
	+r($t)
		margin-left 5px
	&:first-child
		margin-left 0
	a
		padding-top 24px
		padding-bottom 24px
		font-weight normal
		display block
		color inherit
		text-decoration none
		@extends .underline
		+r($tM)
			padding-top 28px
			padding-bottom 24px
.nav
	&__button
		display block
		cursor pointer
		transition transform .2s ease
		+rmin($tM)
			display none
		&:hover
			transform scale(.9)
	&__icon
		margin-top -3px
		display none
		width 26px
		height 26px
		fill #FFF
	&__icon_close
		display none
		width 26px
		height 26px
		fill #FFF
	&__icon_show
		display block
	&__trigger
		display none
		&:checked ~
			.nav__list
				+r($tM)
					position absolute
					z-index 10
					top 100%
					left 0
					padding-top 25px
					padding-right 15px
					padding-bottom 25px
					padding-left 15px
					width 100vw
					min-height 100vh
					display block
					background rgba(0, 0, 0, .8)
					text-align left
					.nav__item
						margin-left 0
						border-bottom 1px solid rgba(255, 255, 255, .4)
						display block
					a
						padding-top 20px
						padding-bottom 20px
						display block
						color #FFF
						&:hover
							&:after
								display none
				+rmin($tM)
					display block

.nav
	&.nav_dark
		.nav__link,
		a
			color #000000
			&:after
				background #000
		.nav__icon
			fill #000
.nav_dark
	.nav__item
		a
			padding-top 0
			padding-bottom 0
			@extends .underline
		&.current-menu-item
			a
				@extends .underline



.nav_bottom
	.nav__icon
		display none
	.nav__list
		+r($tM)
			display flex
			flex-flow row wrap
			justify-content space-around
			width 100%
		.nav__item
			+r($tM)
				margin-right 0
				font-size 12px
	.nav__item
		margin-bottom 10px
		margin-left 0
		margin-right 30px
		+r($tM)
			margin-left 0
			margin-right 10px
			font-size 14px
			line-height 1.4
		+r($tM)
			margin-right 0
			font-size 12px

	.nav__trigger
		+r($tM)
			display none
